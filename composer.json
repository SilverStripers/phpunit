{
    "name": "sminnee/phpunit",
    "description": "The PHP Unit Testing framework - forked to backport PHP 8 support",
    "type": "library",
    "keywords": [
        "phpunit",
        "xunit",
        "testing"
    ],
    "homepage": "https://phpunit.de/",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Sebastian Bergmann",
            "email": "sebastian@phpunit.de",
            "role": "lead"
        }
    ],
    "support": {
        "issues": "https://github.com/sminnee/phpunit/issues"
    },
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7 || ^8",
        "phpunit/php-file-iterator": "~3",
        "phpunit/php-text-template": "~2",
        "phpunit/php-code-coverage": "^9",
        "phpunit/php-timer": "^5",
        "sminnee/phpunit-mock-objects": "^3.4.9",
        "phpspec/prophecy": "^1.6.2",
        "symfony/yaml": "~2.1|~3.0|~4.0",
        "myclabs/deep-copy": "~1.10",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-xml": "*",
        "ext-libxml": "*"
    },
    "replace": {
        "phpunit/phpunit": "^5.7"
    },
    "require-dev": {
        "ext-PDO": "*"
    },
    "conflict": {
        "phpdocumentor/reflection-docblock": "3.0.2"
    },
    "config": {
        "platform": {
            "php": "5.6.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "suggest": {
        "phpunit/php-invoker": "~1.1",
        "ext-xdebug": "*"
    },
    "bin": [
        "phpunit"
    ],
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ],
        "files": [
            "src/Framework/Assert/Functions.php",
            "tests/_files/CoveredFunction.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.7.x-dev"
        }
    }
}
